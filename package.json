{
  "name": "sunrise-reserve",
  "version": "1.0.0",
  "type": "module",
  "description": "サンライズ瀬戸・出雲の空き状況監視CLI",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "test": "bun test",
    "build": "bun build index.ts --outdir dist --target node",
    "typecheck": "bunx tsc --noEmit",
    "deploy": "sudo ./deploy.sh",
    "service:status": "sudo systemctl status sunrise-reserve",
    "service:start": "sudo systemctl start sunrise-reserve",
    "service:stop": "sudo systemctl stop sunrise-reserve",
    "service:restart": "sudo systemctl restart sunrise-reserve",
    "service:logs": "sudo journalctl -u sunrise-reserve -f"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^13.0.0",
    "node-notifier": "^10.0.1",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.2",
    "@types/node-notifier": "^8.0.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
